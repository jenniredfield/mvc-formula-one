
<%- include('./partials/head.ejs', { cssFile: '/css/eventByYear.css' }) -%>

<!-- The video -->
<%- include('./partials/video.ejs') -%>

  <div class="text-header">
    <h1><%=events.event_year%> Even<span class="red">ts</span></h1>
    <!-- //////////////////////////////////////////////////////////////////////////////// -->
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <% let path = "/seasons/" + events.event_year; events.sort(); events.forEach((event, i) => {
      if(i === 0) {%>
        <div class="carousel-item active">
          <% } else { %>
          <div class="carousel-item">
            <% } %>
            <div class="newWidth">
              <p><span class="red">Round: </span> <%= event.round %> </p>
              <p><span class="red">Circuit:
                </span><%= event.circuit_id.name + " " + event.circuit_id.location.country %> </p>
              <p><span class="red">Result Details: </span><a
                  href="<%= path %>/events/<%=event._id%>/results">Details</a></p>
            </div>
          </div>
          <% }) %>
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
        <!-- //////////////////////////////////////////////////////////////////////////////// -->
      </div>
      <div class="links">
        <a href='/'><i class="fa fa-3x fa-home" aria-hidden="true" title="Home"></i></a>
      </div>
    </div>
    
    <%- include('./partials/footerTags.ejs') -%>