<%- include('./partials/head.ejs', { cssFile: '/css/drivers.css' }) -%>

  <!-- The video -->
  <%- include('./partials/video.ejs') -%>

  <div class="text-header">
    <h1>Drive<span class="red">rs</span></h1>

    <!-- //////////////////////////////////////////////////////////////////////////////// -->
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <% driver.forEach((driver, i) => {
      if(i === 0) {%>
        <div class="carousel-item active">
          <% } else { %>
          <div class="carousel-item">
            <% } %>
            <div class="newWidth img-fluid">
              <p><span class="red">Name: </span> <%= driver.givenName + ' ' + driver.familyName %> </p>
              <p><span class="red">DOB: </span> <%= driver.dateOfBirth %> </p>
              <p><span class="red">Nationality: </span><%= driver.nationality%> </p>
              <p><span class="red">Details: </span><a href="<%= driver.url %>">Driver details</a> </p>
            </div>
          </div>
          <% }) %>
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
        <!-- //////////////////////////////////////////////////////////////////////////////// -->
      </div>

      <div class="links">
        <a href='/'><i class="fa fa-3x fa-home" aria-hidden="true" title="Home"></i></a>
      </div>

    </div>
    <%- include('./partials/footerTags.ejs') -%>