<%- include('./partials/head.ejs', { cssFile: '/css/results.css' }) -%>

  <!-- The video -->
  <%- include('./partials/video.ejs') -%>

  <div class="text-header">
    <h1>Resul<span class="red">ts</span></h1>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <% result.forEach((result, i) => {
      if(i === 0) {%>
        <div class="carousel-item active">
          <% } else { %>
          <div class="carousel-item">
            <% } %>
            <div class="newWidth">
              <p><span class="red">Circuit: </span><%= circuit.name + ", " + circuit.location.country  %> </p>
              <p><span class="red">Driver Name: </span>
                <%= result.driver_id.givenName + " " + result.driver_id.familyName %> </p>
              <p><span class="red">Team: </span> <%= result.team_id.name %> </p>
              <p><span class="red">Position: </span> <%= result.position %> </p>
              <p><span class="red">Points: </span> <%= result.points %> </p>
              <p><span class="red">Laps: </span><%=result.laps %> </p>
              <p><span class="red">Status: </span><%=result.status %> </p>
            </div>
          </div>
          <%
        }) %>
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
        <!-- //////////////////////////////////////////////////////////////////////////////// -->
      </div>
      <div class="links">
        <a href='/'><i class="fa fa-3x fa-home" aria-hidden="true" title="Home"></i></a>
      </div>
    </div>
    
  <%- include('./partials/footerTags.ejs') -%>